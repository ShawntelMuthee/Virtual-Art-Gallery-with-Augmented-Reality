rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /artist_profiles/{profileId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }

    match /artworks/{artworkId} {
      allow read: if true;
      allow write: if request.auth != null; // tighten to artist ownership when available
    }

    match /styles/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /themes/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /interactions/{interactionId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }

    match /recommendations/{recId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.user_id;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}